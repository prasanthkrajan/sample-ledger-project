.container
	.heading
		All Ledgers
	.total-entries
		= "Total Ledgers: #{@ledgers.count + 1}"
	.content
		= link_to 'My Ledger', my_ledger_path
		- @ledgers.each do |ledger|
			.row
				= link_to ledger.title, ledger_path(ledger)
	.footer.fixed-bottom
		= link_to 'Create New Ledger', new_ledger_path, class: "btn btn-primary"